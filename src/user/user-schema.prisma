model User {
  id              Int              @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String           @unique
  password        String?
  status          UserStatusEnum   @default(ACTIVE)
  inviteSent      DateTime?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  // Define the userProperties relation
  onboardTracking OnboardTracking?
  contacts        Contact[]

  @@map("users")
}

enum UserStatusEnum {
  ACTIVE
  DELETED
  INACTIVE
  INVITED
}
