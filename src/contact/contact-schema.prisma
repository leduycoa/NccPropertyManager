model Contact {
    id                Int               @id @default(autoincrement())
    firstName         String
    lastName          String
    email             String            @unique
    phoneNumber       String?
    password          String?
    status            ContactStatusEnum @default(ACTIVE)
    type              ContactTypeEnum   @default(ADMIN)
    userId            Int
    createdAt         DateTime          @default(now())
    updatedAt         DateTime          @updatedAt
    // Define the userProperties relation
    user              User              @relation(fields: [userId], references: [id])
    agents            Agent[]
    contactProperties ContactProperty[]

    @@map("contacts")
}

enum ContactStatusEnum {
    ACTIVE
    DELETED
    INACTIVE
}

enum ContactTypeEnum {
    USER
    AGENT
    ADMIN
    SUPLLIER
    OTHER
}
